@model Event
<h2 class="text-center mb-2">Create an Activity</h2>
<form asp-action="CreateEvent" asp-controller="Home" method="post" class="col-6 mx-auto">
    <div class="form-group">
        <input asp-for="Title" class="form-control" />
        <label asp-for="Title"></label>
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <input asp-for="Start" class="form-control" />
        <label asp-for="Start"></label>
        <span class="text-danger" asp-validation-for="Start"></span>
    </div>

    <div class="form-group">
        <input asp-for="Duration" class="form-control" />
        <label asp-for="Duration"></label>
        <span class="text-danger" asp-validation-for="Duration"></span>
    </div>



    <div class="form-group">
        <select asp-for="DurationString" class="form-control">
            <option value="Minutes">Minutes</option>
            <option value="Hours">Hours</option>
            <option value="Days">Days</option>
        </select>
        <span class="text-danger" asp-validation-for="DurationString"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4" cols="50"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <input type="submit" value="Create Activity" class="btn btn-primary"/>

</form>